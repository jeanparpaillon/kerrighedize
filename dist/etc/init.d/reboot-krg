#! /bin/sh
### BEGIN INIT INFO
# Provides:          reboot-krg
# Required-Start:
# Required-Stop:     reboot
# Should-Stop:
# X-Stop-After:      umountroot
# Default-Start:
# Default-Stop:      6
# Short-Description: Execute the reboot command.
# Description:
### END INIT INFO

PATH=/sbin:/usr/sbin:/bin:/usr/bin

. /lib/lsb/init-functions

# Gracefully exit if not running a Kerrighed kernel
[ -e /sys/kerrighed/node_id ] || exit 0

do_stop () {
	# Message should end with a newline since kFreeBSD may
	# print more stuff (see #323749)
	log_action_msg "Will now restart the cluster"
	krgadm cluster reboot

	# Do not return to not run the regular halt
	while true; do
	    sleep 1
	done
}

case "$1" in
  start)
	# No-op
	;;
  restart|reload|force-reload)
	echo "Error: argument '$1' not supported" >&2
	exit 3
	;;
  stop)
	do_stop
	;;
  *)
	echo "Usage: $0 start|stop" >&2
	exit 3
	;;
esac
